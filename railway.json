{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "setup": {
        "nixPkgs": ["nodejs_20"]
      },
      "install": {
        "cmds": [
          "npm install",
          "cd client && npm install",
          "cd server && npm install"
        ]
      },
      "build": {
        "cmds": [
          "cd client && npm run build",
          "cd server && npm run build"
        ]
      },
      "start": {
        "cmd": "cd server && npm start"
      },
      "variables": {
        "NODE_ENV": "production",
        "PORT": "5000"
      }
    }
  },
  "deploy": {
    "startCommand": "cd server && npm start"
  }
}